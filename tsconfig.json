{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "paths": {
      "@app/services": ["libs/services/src"],
      "@app/services/*": ["libs/services/src/*"],
      "@app/utils": ["libs/utils/src"],
      "@app/utils/*": ["libs/utils/src/*"],
      "@app/auth": ["libs/auth/src"],
      "@app/auth/*": ["libs/auth/src/*"],
      "@app/storage": ["libs/storage/src"],
      "@app/storage/*": ["libs/storage/src/*"],
      "@app/domain": ["libs/domain/src"],
      "@app/domain/*": ["libs/domain/src/*"],
      "@app/exceptions": ["libs/exceptions/src"],
      "@app/exceptions/*": ["libs/exceptions/src/*"],
      "@app/admin": ["libs/admin/src"],
      "@app/admin/*": ["libs/admin/src/*"],
      "@app/cqrs": ["libs/cqrs/src"],
      "@app/cqrs/*": ["libs/cqrs/src/*"]
    }
  }
}
